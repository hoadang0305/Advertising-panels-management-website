<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Department Page</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f9f9f9;
        }

        #container {
            display: flex;
            margin: 20px;
            background-color: #ffffff;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        #districts {
            flex: 1;
            padding: 20px;
            background-color: #3498db;
            color: #ffffff;
            border-radius: 8px;
            margin-right: 20px;
            text-align: center;
        }

        #wards {
            flex: 2;
            padding: 20px;
            border-radius: 8px;
            background-color: #ecf0f1;
        }

        #wards h2 {
            color: #2c3e50;
            text-align: center;
            margin-bottom: 20px;
        }

        table {
            border-collapse: collapse;
            width: 100%;
            margin-top: 20px;
        }

        th,
        td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: left;
        }

        th {
            background-color: #FFA07A;
        }

        tr:hover {
            background-color: #d5dbdb;
        }
    </style>
</head>

<body>
    <div id="container">
        <div id="districts">
            <h2>Districts</h2>
            <table id="districtTable">
                <tbody id="districtBody">
                </tbody>
            </table>
        </div>

        <div id="wards">
            <h2>Wards</h2>
            <table id="wardTable">
                <tbody id="wardBody">
                </tbody>
            </table>
        </div>
    </div>

    <script>
        // Fetch districts
        fetch('http://localhost:3500/api/district/getAll-dis')
            .then(response => response.json())
            .then(data => {
                console.log('Districts Response:', data); // Check the received data in the console

                // Ensure that data.data is an array before using forEach
                if (Array.isArray(data.data)) {
                    const districtTableBody = document.getElementById('districtBody');
                    data.data.forEach(district => {
                        const row = districtTableBody.insertRow();
                        const cell = row.insertCell(0);
                        cell.textContent = district.disName; // Adjust property name as needed
                        row.onclick = function () {
                            showWards(district.disId);
                        };
                    });
                } else {
                    console.error('Error: Data.data is not an array');
                }
            })
            .catch(error => console.error('Error fetching districts:', error));


        function showWards(district) {
            console.log(district);

            fetch(`http://localhost:3500/api/ward/getDetail-ward/${district}`)
                .then(response => response.json())
                .then(data => {
                    console.log('Wards Response:', data); // Check the received data in the console

                    // Ensure that data is an array before using forEach
                    if (Array.isArray(data.data)) {
                        const wardTableBody = document.getElementById('wardBody');
                        wardTableBody.innerHTML = ''; // Clear previous content

                        data.data.forEach(ward => {
                            const row = wardTableBody.insertRow();
                            const cell = row.insertCell(0);
                            cell.textContent = ward.wardName; // Adjust property name as needed
                        });
                    } else {
                        console.error('Error: Data is not an array');
                    }
                })
                .catch(error => console.error('Error fetching wards:', error));
        }

    </script>
</body>

</html>
