<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Department Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        #container {
            display: flex;
        }

        #districts {
            width: 30%;
            padding: 20px;
            background-color: #f0f0f0;
        }

        #wards {
            width: 70%;
            padding: 20px;
        }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        th,
        td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #f5f5f5;
        }
    </style>
</head>

<body>
    <div id="container">
        <div id="districts">
            <h2>Districts</h2>
            <table id="districtTable">
                <thead>
                    <tr>
                        <th>District</th>
                    </tr>
                </thead>
                <tbody>
                    <tr onclick="showWards('District 1')">
                        <td>District 1</td>
                    </tr>
                    <tr onclick="showWards('District 2')">
                        <td>District 2</td>
                    </tr>
                    <!-- Add more districts as needed -->
                </tbody>
            </table>
        </div>

        <div id="wards">
            <h2>Wards</h2>
            <table id="wardTable">
                <thead>
                    <tr>
                        <th>Ward</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Wards will be displayed here dynamically -->
                </tbody>
            </table>
        </div>
    </div>

    <script>
        function showWards(district) {
            // Assuming you have a list of wards for each district
            var wards = getWardsForDistrict(district);

            // Display the wards in the #wardTable element
            var wardTable = document.getElementById("wardTable");
            var wardTableBody = wardTable.getElementsByTagName("tbody")[0];
            wardTableBody.innerHTML = ""; // Clear previous content

            wards.forEach(function (ward) {
                var row = wardTableBody.insertRow();
                var cell = row.insertCell(0);
                cell.textContent = ward;
            });
        }

        function getWardsForDistrict(district) {
            // Replace this with your actual data or fetch from a database
            switch (district) {
                case 'District 1':
                    return ['Ward 1A', 'Ward 1B', 'Ward 1C'];
                case 'District 2':
                    return ['Ward 2A', 'Ward 2B', 'Ward 2C'];
                // Add cases for other districts
                default:
                    return [];
            }
        }
    </script>
</body>

</html>